<Alloy>
	<Window backgroundColor="#ffffff">
		<View class="container" layout="vertical">
			<View id="header" height="50" backgroundColor="#CCCCCC"   width="100%">
				<View top="20">
				<ImageView image="/img/menu.png" left="5" id="menuId"></ImageView>
				<ImageView image="/img/logo.png" ></ImageView>
				</View>
			</View>
			
			<View width="90%" height="100">
				<Label color="red" width="90%" textAlign="center">Reserva tu mesa y disfruta de la variedad que ofrecemos.</Label>
			</View>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			<TextField hintText="Nombre..." width="100%" height="40" id="nombre"></TextField>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			<TextField hintText="Email..." width="100%" height="40" id="email"></TextField>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			<TextField hintText="Fecha de reservación" width="100%" height="40" id="fecha"></TextField>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			<TextField hintText="Hora de llegada" width="100%" height="40" id="hora"></TextField>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			<TextField hintText="Número de personas" width="100%" height="40" id="numero"></TextField>
			<View height="1" width="100%" backgroundColor="#000000"></View>
			
			<Label color="blue" textAlign="center" top="10">El privado requere 3 días de anticipación</Label>
			<Label color="#cccccc" textAlign="center">Las reservaciones se respetarán sólo una hora con la mesa completa</Label>
			
			<Button width="95%" height="40" backgroundColor="blue" color="#ffffff" id="reserva">Reservar</Button>
		</View>
	</Window>
	
</Alloy>